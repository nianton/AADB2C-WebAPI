@model WebApp.Models.LoginModel
@{
    Layout = "~/Views/Shared/_AdB2CLayout.cshtml";
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@using (Html.BeginForm())
{
<div id="api" data-name="Unified">
    <div class="localAccount" role="form">
        <div class="intro">
            <h2>Sign in with your Active Directory account</h2>
        </div>
        <div class="error pageLevel" aria-hidden="true" style="display: none;">
            <p role="alert"></p>
        </div>
        <div class="entry">
            <div class="entry-item">
                <label for="logonIdentifier">User name</label>
                <div class="error itemLevel" aria-hidden="true" style="display: none;">
                    <p role="alert"></p>
                </div>
                <input type="email" id="logonIdentifier" name="LogonIdentifier" placeholder="LogonIdentifier" value="@Model.Username" tabindex="1" disabled="disabled">
            </div>
            <div class="entry-item">
                <div class="password-label"> <label for="password">Password</label><a id="forgotPassword" tabindex="2">Forgot your password?</a></div>
                <div class="error itemLevel" aria-hidden="true" style="display: none;">
                    <p role="alert"></p>
                </div>
                <input type="password" id="password" name="Password" placeholder="Password" tabindex="1">
            </div>
            <div class="working"></div>
            <div class="buttons">
                <button id="continue" aria-label="Create">Sign in</button>
                <button id="cancel" aria-label="Cancel">Cancel</button>
            </div>
        </div>
        @*<div class="divider">
            <h2>OR</h2>
        </div>
        <div class="create">
            <p>Don't have an account?<a id="createAccount" tabindex="1">Sign up now</a></p>
        </div>*@
    </div>
</div>
}

<script src="~/Scripts/jquery-2.1.4.min.js"></script>
<script>
    $(function () {
        $('#forgotPassword').click(function () {
            alert("Please contact your administrator.")
        });

        $('#cancel').click(function () {
            window.location = "/Account/Login";
        });

        $('form').submit(function () {
            var password = $('#password').val();
            if (!password)
                return false;
        });

        $('#password').focus();
    });
</script>